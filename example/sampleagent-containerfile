# Build with  'podman build . -f example/sampleagent-containerfile -t a2a-server-agent'
# Run with 'podman run -p 41242:41242 a2a-server-agent'
FROM dart:3.9.2
WORKDIR /app
COPY . .
RUN dart pub get
RUN dart compile exe example/a2a_server_agent.dart
EXPOSE 41242
ENTRYPOINT ["/app/example/a2a_server_agent.exe"]